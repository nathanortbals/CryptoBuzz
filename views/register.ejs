<!DOCTYPE html>
<html>
<head>
    <% include partials/head.ejs %>
</head>
<body>
<div class="container h-100 align-middle">
    <form class="row h-100" action="/register" method="post">
        <div class="col-sm-10 col-lg-4 col-centered my-auto">
            <div class="form-group row">
                <label for="username" class= "col-sm-4 col-form-label">Username</label>
                <div class="col-sm-8">
                    <input class="form-control form-control-text" type="text" name="username"/>
                </div>
            </div>
            <div class="form-group row">
                <label for="email" class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input class="form-control form-control-text" type="email" name="email"/>
                </div>
            </div>
            <div class="form-group row">
                <label for="password" class="col-sm-4 col-form-label">Password</label>
                <div class="col-sm-8">
                    <input class="form-control form-control-text" type="password" name="password"/>
                </div>
            </div>
            <div class="form-group row">
                <button type="submit" class="btn-block btn btn-primary px-2">Register</button>
            </div>
            <div class="row">
                <h5>Already have an account? <a href="/login">Login</a></h5>
            </div>
        </div>
    </form>
</div>

<% include partials/scripts.ejs%>
</body>
</html>
